{
  "name": "@dopry/pecans",
  "version": "1.0.0",
  "description": "Server to make GitHub releases (private) available to download with Squirrel support",
  "engines": {
    "node": ">=12"
  },
  "main": "./lib/index.js",
  "homepage": "https://github.com/dopry/pecans",
  "license": "Apache-2.0",
  "dependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "analytics-node": "^4.0.1",
    "basic-auth": "^2.0.1",
    "body-parser": "^1.19.0",
    "destroy": "^1.0.4",
    "express": "^4.13.3",
    "express-useragent": "^1.0.15",
    "github-webhook-handler": "^1.0.0",
    "lru-diskcache": "1.1.1",
    "node-fetch": "^2.6.1",
    "octocat": "^1.2.1",
    "request": "^2.88.2",
    "semver": "^7.3.5",
    "stream-res": "1.0.1",
    "strip-bom": "2.0.0",
    "understudy": "4.1.0",
    "urljoin.js": "0.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "feed": "^4.2.2",
    "mocha": "^8.4.0",
    "semantic-release": "^17.4.3",
    "should": "^13.2.3"
  },
  "bugs": {
    "url": "https://github.com/dopry/pecans/issues"
  },
  "authors": [
    {
      "name": "Samy Pesse",
      "email": "samypesse@gmail.com"
    },
    {
      "name": "Darrel O'Pry"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dopry/pecans.git"
  },
  "scripts": {
    "start": "node bin/web.js",
    "test": "mocha --reporter list",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGES.md"
        }
      ],
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGES.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
